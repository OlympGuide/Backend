FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY OlympGuide/OlympGuide.sln ./OlympGuide/
COPY OlympGuide/*.csproj ./OlympGuide/
COPY OlympGuide.Application/*.csproj ./OlympGuide.Application/
COPY OlympGuide.Domain/*.csproj ./OlympGuide.Domain/
COPY OlympGuide.Infrastructre/*.csproj ./OlympGuide.Infrastructre/
COPY OlympGuideTests/*.csproj ./OlympGuideTests/

RUN dotnet restore "./OlympGuide/OlympGuide.csproj"

